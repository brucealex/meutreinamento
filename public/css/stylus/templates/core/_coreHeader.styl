.perfil
	col(6/15,gutter:0)
	height 5em
	background-color palette('Grey', '300')
	.user
		col(5/5,gutter:0)
		.user-img
			col(1.1/5,gutter:0)
			box-sizing border-box
			text-align left
			margin-left 1em
			margin-top .2em
			cursor pointer
		.user-name
			col(1/5,gutter:0)
			border-bottom 1px solid
			position absolute
			left 4.5em
			top -1.5em
			color palette('Grey', '600')
			text-align left
			font-weight bold
		.breadcrumb
			col(1/5,gutter:0)
			position absolute
			left 6.3em
			top 2.5em
			text-align right
			color palette('Grey', '600')
	.menu
		col(3.5/11,gutter:0)
		box-sizing border-box
		height 22em
		position absolute
		top 6em
		left 1em
		background-color palette('Grey', '300')
		padding 0.5em
		.menu-header
			col(4/4,gutter:0)
			.perfil-user
				col(4/4,gutter:0)
				.img-user
					col(.7/4,gutter:0)
					display inline-block
					margin 0
					padding 0
				h6
					col(2.5/4,gutter:0)
					position absolute
					font-size 1.2em
					margin 0
					top .4em
					left 3.5em
				ng-md-icon
					col(.5/4,gutter:0)
					shift(2.8/4,gutter:0)
					padding-top .5em
					text-align center
		.icons-header
			col(5/5,gutter:0)
			.dashboard
				col(5/5,gutter:0)
				p
					margin 0
					font-size .8em
			border-bottom 1px solid #D1D1D1
			text-align center
				
		.menu-content
			col(4/4,gutter:0)
			p
				display inline
			img
				margin .4em
			.goal
				col(2/4,gutter:0)
			.plan
				col(2/4,gutter:0)
			.icons-content
				col(1)
				font-size .6em
				li
					display inline
.user-admin
	col(3/15,gutter:0)
	shift(12/15,gutter:0)
	position fixed
	height 5em
	background-color palette('Grey', '300')
	.admin-name
		display inline
		vertical-align middle
		color palette('Grey', '600')
		font-weight bold
	.line
		display inline
		vertical-align middle
	.logout
		display inline
		color palette('Red', '600')
		margin-left 0.6em
		text-decoration none
		font-size 0.8em

