.perfil
	col(6/15,gutter:0)
	height 5em
	.user
		col(5/5,gutter:0)
		.user-img
			col(1/5,gutter:0)
			box-sizing border-box
			text-align left
			margin-left 1em
			margin-top .4em
			cursor pointer
		.user-name
			col(1/5,gutter:0)
			border-bottom 1px solid
			position absolute
			left 4.5em
			top -1.5em
			color palette('Grey', '600')
			text-align left
			font-weight bold
		.breadcrumb
			col(1/5,gutter:0)
			position absolute
			left 6.3em
			top 2.7em
			text-align right
			color palette('Grey', '600')
	.menu
		col(4.3/11,gutter:0)
		+desktop()
			col(3.8/11,gutter:0)
		+hd()
			col(3/11,gutter:0)
		box-sizing border-box
		height 22em
		+tablet()
			height 24em
		+tablet(orientation: portrait)
			height 26em
		position absolute
		top 6.3em
		left .5em
		background-color white
		box-shadow 0px 0px 3px rgba(0,0,0,0.1)
		border 1px solid palette('Grey', '300')
		padding 0.5em
		.chat-bubble-arrow-border
			border-color transparent transparent palette('Grey', '300') transparent
			border-style solid
			border-width 1em
			height 0
			width 0
			position absolute
			top -2em
			left 1.6em
		.chat-bubble-arrow
			border-color transparent transparent #fff transparent
			border-style solid
			border-width 1em
			height 0
			width 0
			position absolute
			top -1.9em
			left 1.6em
		.menu-header
			col(4/4,gutter:0)
			.perfil-user
				col(4/4,gutter:0)
				padding-left 1em
				.img-user
					col(.5/4,gutter:0)
					display inline-block
					margin 0
					padding 0
				h6
					col(2.5/4,gutter:0)
					position absolute
					font-size 1.2em
					margin 0
					top .1em
					left 3.5em
				ng-md-icon
					col(.5/4,gutter:0)
					shift(2.5/4,gutter:0)
					padding-top .5em
					text-align center
		.icons-header
			col(3/4,gutter:0)
			shift(.6/4,gutter:0)
			margin-bottom .5em
			section
				col(1/4,.5/4,cycle:3,gutter:0)
				text-align center
				p
					margin 0
					display block
					font-size .9em
					color palette('Blue', '500')
				
		.menu-content
			col(5/5,gutter:0)
			border-top 1px solid palette('Grey', '200')
			.plan-header
				col(5/5,gutter:0)
				.title-plan
					col(3/5,gutter:0)
					p
						box-sizing border-box
						font-size 90%
						margin 0
						font-weight bold
						color #aaaaaa
						margin-top .5em
						margin-left .5em
				.edit-plan
					col(2/5,gutter:0)
					text-align right
					p
						box-sizing border-box
						margin 1em
						font-size 70%
						font-weight bold
						color palette('Blue', '500')
						margin-top .3em
						padding-right .9em

				// md-select-label
				// 	col(2/5,gutter:0)
				// 	top -1.2em
				// 	font-size 80%
			.plan
				col(5/5,gutter:0)
				box-sizing border-box
				padding-left 2.5em
				padding-right 2.5em
				margin-bottom 1.5em
				text-align center
				p
					margin 0
					color #aaaaaa
					font-size 80%
			.icons-content
				col(7/8,gutter:0)
				shift(.3/8,gutter:0)
				margin-bottom .5em
				section
					col(2/8,.5/8,cycle:3,gutter:0)
					text-align center
					p
						display block
						line-height: 100%;
						color palette('Blue', '500')
						font-weight normal
						font-size .9em
						margin 0
			.btn-train
				col(5/5,gutter:0)
				text-align center
				button.md-button
					width 50%
					height auto
					font-size 90%
				ng-md-icon
					svg
						position absolute
						top .1em
						left .5em
						+desktop()
							left 1.5em
.user-admin
	col(3/15,gutter:0)
	shift(12/15,gutter:0)
	position fixed
	text-align right
	.img-admin
		col(.5/3,.8/3,gutter:0)
		margin-top .4em
	.admin-name
		col(1/3,gutter:1)
		text-align right
		padding-top .5em
		color palette('Blue', '500')
	ng-md-icon
		col(.3/3,gutter:0)
		text-align left
		padding-top .5em
	.options-admin
		col(10/15, gutter:0)
		position absolute
		top 3em
		right .7em
		box-sizing border-box
		padding-left 1em
		padding-right 1em
		background-color white
		box-shadow 0px 0px 3px rgba(0,0,0,0.1)
		border 1px solid palette('Grey', '300')
		p
			margin 0
			font-size 90%
			color palette('Blue', '500')
			text-align left
			border-bottom 1px solid palette('Grey', '50')

