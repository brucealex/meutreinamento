.edit-wrap-content
	col(6/6,gutter:0)
	box-sizing border-box
	padding-left .5em
	padding-right .5em
	+desktop()
		padding-left 8%
		padding-right 8%
	+hd()
		padding-left 12%
		padding-right 12%
	margin-top 4.0em
	.user-add
		col(5/5,gutter:0)
		.menu-add
			col(5/5,gutter:0)
			z-index 3
			// background-color palette('Grey', '100') 
			background white
			// background -webkit-linear-gradient(90deg, #607D8B 27%, #78909C  73%)
			// background    -moz-linear-gradient(90deg, #607D8B 27%, #78909C  73%)
			// background     -ms-linear-gradient(90deg, #607D8B 27%, #78909C  73%)
			// background      -o-linear-gradient(90deg, #607D8B 27%, #78909C  73%)
			// background         linear-gradient(90deg, palette('Blue Grey', '600') 25%, palette('Blue Grey', '500') 75%)
			position fixed
			top 0
			left 0
			width 100%
			height 3.9em
			border-bottom 1px solid palette('Grey', '300')
			// box-shadow 0 2px 8px 0 rgba(0,0,0,.26)
			.user-img-add
				col(.4/5,gutter:0)
				position absolute
				left .8em
				bottom 0
			.user-name-add
				col(1/5,gutter:0)
				border-bottom 1px solid palette('Grey', '400')
				position absolute
				left 3.7em
				bottom .9em
				font-size 140%
				line-height 35px
				color palette('Grey', '700')
				text-align left
				font-weight bold
			.breadcrumb-add
				col(1/5,gutter:0)
				position absolute
				left 5.5em
				bottom -.1em
				text-align right
				color palette('Grey', '700')
				font-size 97%
			.actions-add
				col(2/5,gutter:0)
				position absolute
				text-align right
				right 5.1em
				bottom 1.1em
				button.md-button
					width 35%
					min-width 15px
					min-height 30px
					line-height 30px
					font-size 90%
					margin 0

	md-content
		background-color transparent 
		md-card
			min-height:88vh
			+desktop()
				min-height:90vh

