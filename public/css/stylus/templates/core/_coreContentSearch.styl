.search-wrap
	col(7/7, gutter:0)
	box-sizing border-box
	md-content.md-default-theme
		background-color palette('Grey', '50') 
		md-card
			height:98vh
			box-shadow 0 2px 9px 0 rgba(0,0,0,.26)
			.search
				col(7/7, gutter:0)
				md-input-container
					col(6/7, gutter:0)
					margin 0
					padding 0
				ng-md-icon
					col(1/7,gutter:0)
					svg
						margin-top .8em
						width 90%
			h6.suggestion
				box-sizing border-box
				padding-left 25%
				padding-top 0
				margin-top 0
			.suggestion
				col(7/9,1/9 -1/9, gutter:0)
				margin-top 6em
				section
					col(1/2,cycle:2)
			.fab-action
				position fixed
				bottom 1em
				right 1em
				.md-button.md-fab
					// font-size 70%
					width 60px
					height 60px
					padding-top .8em
					+desktop()
						width 80px
						height 80px
						padding-top 1.5em
					box-shadow 0 3px 13px 0 #9E9E9E, 0 3px 5px 0 #a0a0a0;
					background-color palette('Blue','700')


			.new-user
				col(8/9,.5/9 -.5/9,gutter:0)
				margin-top 1em
				h5
					margin 0
					padding 0
					padding-left 1em
				.avatar
					col(3.2/8,.5/8,gutter:4)
					text-align center
					margin-top 1.4em
					.uploadcare-widget-button-open
						background-color palette('Teal', '300')
					+tablet(orientation: portrait)
						margin-top 2.4em
					.img-selected
						width 50%
						height auto
				.attributes
					col(3.2/8,-.5/8,gutter:0)
					margin-bottom .5em
					md-input-container
						padding .1em
					button
						stack()
						margin-top 2em

