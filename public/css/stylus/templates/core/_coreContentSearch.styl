.search-wrap
	col(7/7, gutter:0)
	box-sizing border-box
	md-content.md-default-theme
		background-color #eee
		top 50%
		md-card
			height:98vh
			box-shadow 0 2px 9px 0 rgba(0,0,0,.26)
			.search
				col(7/7, gutter:0)
				md-input-container
					col(6/7, gutter:0)
					margin 0
					padding 0
				ng-md-icon
					col(1/7,gutter:0)
					svg
						margin-top .8em
						width 90%
			h6.suggestion
				box-sizing border-box
				padding-left 25%
				padding-top 0
				margin-top 0
			.suggestion
				col(7/9,1/9 -1/9, gutter:0)
				section
					col(1/2,cycle:2)
			.new-user
				col(8/9,.5/9 -.5/9,gutter:0)
				margin-top 1em
				h5
					margin 0
					padding 0
					padding-left 1em
				.avatar
					col(3.2/8,.5/8,gutter:4)
					text-align center
					margin-top 1.4em
					+tablet(orientation: portrait)
						margin-top 2.4em
					.img-selected
						width 50%
						height 50%
				.attributes
					col(3.2/8,-.5/8,gutter:0)
					margin-bottom .5em
					md-input-container
						padding .1em
					button
						stack()
						margin-top 2em

