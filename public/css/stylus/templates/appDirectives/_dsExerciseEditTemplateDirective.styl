.ds-exercise-edit
	col(12/12,gutter:0)
	box-sizing border-box
	position relative
	// padding 10px
	.ds-exercise-edit-header
		col(12/12,gutter:0)
		background-color palette('Blue Grey','400')
		color white
		line-height 80px
		.ds-exercise-edit-way
			col(6/12,gutter:0)
			box-sizing border-box
			padding-left 3%
			padding-right 12%

			span 
				font-size 120%
				color white
				line-height 30px
				// font-weight bold
		.ds-exercise-edit-series
			col(2/12,gutter:0)
			text-align left
		.ds-exercise-edit-action
			col(4/12,gutter:0)
			text-align right
	.ds-exercise-edit-content
		col(12/12,gutter:0)
		box-sizing border-box
		padding-top 20px
		padding-bottom 20px
		min-height 60vh
		position relative
		border-left 2px solid palette('Blue Grey','300')
		border-right 2px solid palette('Blue Grey','300')
		border-bottom 2px solid palette('Blue Grey','300')
		md-content.series
			box-sizing border-box
			padding-left 5em
			padding-right 5em
			+hd()
				padding-left 8em
				padding-right 8em
			max-height:35vh 
			+tablet(orientation: portrait)
				max-height:43vh 
			+desktop()
				max-height:43vh 
			ul
				margin 0
				padding 0
				font-size 100%
				list-style none
				.sv-helper
					font-size 115%
					color black
					// line-height 2.4em
					// +desktop()
					// 	line-height 2.2em
					// background-color palette('Grey','100')
					// border 1px solid palette('Blue Grey','400')
					opacity 0.9
				.sv-candidate
					opacity 0.5
				li
					col(12/12,gutter:0)
					box-sizing border-box
					// margin-bottom .5em
		.ds-exercise-edit-serie
			col(11.5/12,gutter:0)
			box-sizing border-box
			position absolute
			top 0
			left .7em
			height 100%
			padding 10px
			background-color red
			// display none
		.insert-details
			col(12/12,gutter:0)
			box-sizing border-box
			input[type="text"]
				padding 0
