.ds-exercise
	col(12/12,gutter:0)
	.ds-exercise-close
		col(12/12,gutter:0)
		.ds-viw-exerc
			col(12/12,gutter:0)
			.ds-drag
				col(1/11,gutter:0)
				box-sizing border-box
				padding-left .5em
				cursor pointer
				&:hover
					zoom 1.1
				ng-md-icon
					svg
						vertical-align middle
			.ds-exerc
				// col(5.5/11,gutter:0)
				col(10/11,gutter:0)
				box-sizing border-box
				text-align left
				padding-left .9em
				span
					display inline-block
					margin-right 2%
					padding 3px 8px 3px 8px
					+desktop()
						padding 5px 11px 5px 11px
						line-height 11px
					font-size 83%
					border 1px solid palette('Blue Grey','200')
					border-radius 16px
					line-height 10px
					// background-color palette('Grey','50')
					color black

	.ds-exercise-open
		col(12/12,gutter:0)
		.ds-header-exerc
			col(12/12,gutter:0)
			box-sizing border-box
			border-bottom 1px solid palette('Blue Grey','300')
			background-color palette('Blue Grey','300')
			padding-left 8px
			padding-right 5px
			line-height 2.4em
			color white
			.ds-series
				col(4/12,gutter:0)
				text-align left
				font-weight bold
			.ds-break-time
				col(4/12,gutter:0)
			.ds-exerc-options
				col(4/12,gutter:0)
				text-align right
				ng-md-icon
					svg
						vertical-align middle
						margin-right 15px
		.ds-content-exerc
			col(12/12,gutter:0)
			md-content.exerc
				max-height:22vh 
				+tablet(orientation: portrait)
					max-height:29vh 
				+desktop()
					max-height:29vh 
			.ds-list-steps
				col(12/12,gutter:0)
				box-sizing border-box
				padding 15px
				.ds-step-content
					col(12/12,gutter:0)
					margin-bottom 8px
					.ds-position-step
						col(1/12,gutter:0)
						position relative
						top -4px
					.ds-list-exerc
						col(11/12,gutter:0)
						box-sizing border-box
						border 1px solid palette('Blue Grey','300')
						.ds-list-exerc-item
							col(11/12,gutter:0)
							padding 3px
							line-height 20px
							vertical-align middle
							+desktop()
								padding 3px
								line-height 20px
							.ds-exer-name
								col(7/12,gutter:0)
								box-sizing border-box
								text-align center
								padding-left 5px
							.ds-exerc-repts
								col(3/12,gutter:0)
								text-align right
							.ds-exerc-weight
								col(2/12,gutter:0)
								text-align center

