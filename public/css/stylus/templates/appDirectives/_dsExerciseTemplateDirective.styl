.ds-exercise
	col(12/12,gutter:0)
	.ds-exercise-close
		col(12/12,gutter:0)
		.ds-viw-exerc
			col(12/12,gutter:0)
			.ds-drag
				col(.7/11,gutter:0)
				box-sizing border-box
				cursor move
				background-color palette('Blue Grey','300')
				&:hover
					zoom 1.2
				ng-md-icon
					svg
						vertical-align middle
			.ds-exerc
				col(10.3/11,gutter:0)
				box-sizing border-box
				text-align left
				padding-left .9em
				cursor pointer
				span
					display inline-block
					margin-right 2%
					padding 3px 8px 3px 8px
					+desktop()
						padding 5px 11px 5px 11px
						line-height 11px
					font-size 83%
					border 1px solid palette('Blue Grey','400')
					border-radius 16px
					line-height 10px
					// box-shadow: 0 2px 3px rgba(0,0,0,.15)
					color black
	// .ds-exercise-open.ng-hide-add.ng-hide-add-active,
	// .ds-exercise-open.ng-hide-remove
	// 	-webkit-transition all linear 0.5s
	// 	transition all linear 0.5s
	// 	animation 3s fadeIn
	// .ds-exercise-open.ng-hide-remove.ng-hide-remove-active
	// 	animation 3s fadeIn
	.ds-exercise-open
		col(12/12,gutter:0)
		.ds-header-exerc
			col(12/12,gutter:0)
			box-sizing border-box
			border-bottom 1px solid palette('Blue Grey','300')
			background-color palette('Blue Grey','300')
			padding-left 6px
			padding-right 6px
			line-height 2.8em
			color white
			.ds-series
				col(4/12,gutter:0)
				text-align left
				font-weight bold
				cursor pointer
			.ds-break-time
				col(5.5/12,gutter:0)
				cursor pointer
			.ds-exerc-options
				col(2.5/12,gutter:0)
				text-align right
				ng-md-icon
					cursor pointer
					svg
						vertical-align middle
						margin-right 15px
		.ds-content-exerc
			col(12/12,gutter:0)
			box-sizing border-box
			border-left 2px solid palette('Blue Grey','300')
			border-right 2px solid palette('Blue Grey','300')
			border-bottom 2px solid palette('Blue Grey','300')
			background-color white
			md-content.exerc
				max-height:22vh 
				+tablet(orientation: portrait)
					max-height:30vh 
				+desktop()
					max-height:30vh 
			.ds-list-steps
				col(12/12,gutter:0)
				box-sizing border-box
				padding 15px
				.ds-step-content
					col(12/12,gutter:0)
					box-sizing border-box
					margin-bottom 8px
					padding-right 1.5em
					// padding-left 1em
					+desktop()
						padding-right 3.5em
						padding-left 2em
					.ds-position-step
						col(1/12,gutter:0)
						position relative
						top -5px
						text-align center
						span
							font-weight bold
							font-size 90%
							color palette('Grey','600')
					.ds-list-exerc
						col(11/12,gutter:0)
						box-sizing border-box
						border 1px solid palette('Blue Grey','200')
						&:hover
							background-color palette('Blue Grey','50')
						// color black
						.ds-list-exerc-item
							col(12/12,gutter:0)
							box-sizing border-box
							padding 4px
							line-height 20px
							vertical-align middle
							// border 1px solid palette('Blue Grey','300')
							// background-color palette('Grey','50')
							+desktop()
								padding 6px
							.ds-exer-name
								col(7/12,gutter:0)
								box-sizing border-box
								text-align center
								padding-left 5px
							.ds-exerc-repts
								col(3/12,gutter:0)
								text-align right
							.ds-exerc-weight
								col(2/12,gutter:0)
								text-align center

