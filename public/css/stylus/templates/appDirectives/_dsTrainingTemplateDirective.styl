.ds-training
	box-sizing border-box
	display inline-block
	width 60px
	padding 9px 2px 3px 2px
	border 1px solid palette('Grey','300')
	border-radius 4%
	box-shadow 0px 2px 5px rgba(0,0,0,0.1)
	text-align center
	margin 10px
	&.ds-training-disable
		opacity .6
		color rgba(0,0,0,0.26)
	p
		margin 0
		padding 0
	+tablet()
		zoom .8
	.ds-header
		box-sizing border-box
		line-height 10px
		vertical-align middle
		color palette('Grey','600')
		font-size 16px
		text-align center
		margin-bottom 4px
	.ds-name-training
		box-sizing border-box
		line-height 37px
		vertical-align middle
		text-transform uppercase
		font-size 32px
