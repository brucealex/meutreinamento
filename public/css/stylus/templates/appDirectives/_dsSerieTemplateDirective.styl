.ds-serie
	col(12/12,gutter:0)
	position relative
	margin-top 4px
	margin-bottom 4px
	.ds-serie-view
		col(12/12,gutter:0)
		box-sizing border-box
		background-color white
		.ds-serie-step-content
			col(12/12,gutter:0)
			margin-bottom 8px
			.ds-serie-position-step
				col(1/12,gutter:0)
				box-sizing border-box
				text-align center
				position relative
				top -3px
				color black
			.ds-serie-list
				col(11/12,gutter:0)
				box-sizing border-box
				border 1px solid palette('Blue Grey','300')
				position relative
				&:hover
					background palette('Grey','50')
				.ds-serie-list-item--active
					opacity .1
					background-color palette('Grey','300')
				.ds-serie-list-item
					col(11/11,gutter:0)
					box-sizing border-box
					// padding-top 5px
					// padding-bottom 5px
					// line-height 20px
					// vertical-align middle
					.ds-serie-exerc
						col(7/11,gutter:0)
						box-sizing border-box
						text-align center
						padding-left 5px
					.ds-serie-repts
						col(2/11,gutter:0)
						text-align center
					.ds-serie-weight
						col(2/11,gutter:0)
						text-align center
				.ds-serie-edit
					col(12/12,gutter:0)
					box-sizing border-box
					position absolute
					top 0
					left 0
					bottom 0
					right 0
					height 50%
					margin auto
					background-color transparent
					text-align center
					ng-md-icon
						cursor pointer
						svg
							vertical-align middle
							padding-right 5px
							position relative
							top -9px
							+tablet()
								width 13%
								height 13%
							+desktop()
								&:hover
									zoom 1.2
					button.md-button
						width 38%
						min-width 15px
						min-height 30px
						line-height 30px
						font-size 80%
						margin 0
						+desktop()
							width 60%
							min-width 15px
							min-height 30px
							line-height 30px
							font-size 85%
							margin 0
						span
							color palette('Light Blue', '500') 

					.ds-serie-edit-clone
						col(4/12,gutter:0)
					.ds-serie-edit-edit
						col(4/12,gutter:0)
					.ed-serie-edit-delete
						col(4/12,gutter:0)
						ng-md-icon
							svg
								vertical-align middle
								padding-right 5px
								position relative
								top -7px

