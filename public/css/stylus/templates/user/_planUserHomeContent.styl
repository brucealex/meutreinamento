.plan-wrap
	col(12/12,gutter:0)
	.plan-dashboard
		col(12/12,gutter:0)
		.plan-graf
			col(3/12,gutter:0)
			box-sizing border-box
			padding-top .3em
			text-align center
		.plan-overview
			col(9/12,gutter:0)
			text-align center
			.plan-goal
				col(8/8,gutter:0)
			.plan-time
				col(8/8,gutter:0)
	.plan-cards
		col(12/12,gutter:0)
		+desktop()
			margin-top 5%
		md-card
			position relative
			border 1px solid palette('Grey','200')
			div.md-actions
				box-sizing border-box
				padding-bottom 8px
				padding-right 2em
				// background-color palette('Grey','50')
				button.md-button
					margin 0
					width 35%
					min-width 15px
					min-height 33px
					line-height 33px
					font-size 95%
			md-card-content
				padding-top 4px
				min-height 26vh 
				+desktop()
					min-height 35vh 
				.md-subheader
					.md-subheader-inner
						 padding 2px 0px 2px 3px
				h4
					text-align center
					margin 0
					ng-md-icon
						svg
							width 6%
							height 6%
							+desktop()
								width 4%
								height 4%
							margin-left 3px
							vertical-align top
							margin-top 7px
							cursor pointer
				md-content
					height:22vh
					+tablet(orientation: portrait)
						height:27vh
					+desktop()
						height:30vh
					text-align center
					ds-training
						span(1/6,.6/5,cycle:3,uncycle:1,gutter:0)
						+below(700px)
							span(1/3,cycle:3,uncycle:1,gutter:0)
						+hd()
							span(1/4,cycle:4,uncycle:1,gutter:0)
		.plan-trainings
			col(6/12,gutter:0)
			+desktop()
				col(5.5/12,.5/12 -.5/12,gutter:0)
		.plan-historical
			col(6/12,gutter:0)
			+desktop()
				col(5.5/12,gutter:0)
