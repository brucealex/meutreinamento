										// 	opacity:0;
										li.ng-enter.ng-enter-active,
										li.ng-move.ng-move-active
											opacity 1
										.sv-helper
											font-size 120%
											color black
											line-height 38px
											background-color palette('Blue Grey','50')
											border 1px solid palette('Blue Grey','200')  
											opacity 0.9
										.sv-candidate
											opacity 0.5
										li.ng-leave
											-webkit-transition all linear 0.3s
											-moz-transition all linear 0.3s
											-o-transition all linear 0.3s
											transition all linear 0.3s
											position relative
											left 5px
											opacity .2
											// &.ng-leave-active
											// 	opacity 0
