											// 	}
										li
											border 1px solid palette('Blue Grey','100')
											background-color white
											box-sizing border-box
											margin-bottom .5em
											col(12/12,gutter:0)
											text-align center
											color palette('Grey','800')
											// background-color palette('Grey','50')
											// &:hover
											// 	background palette('Blue Grey','50')
											.drag
												col(1/11,gutter:0)
												margin-left .5em
												cursor pointer
												&:hover
													zoom 1.1
												ng-md-icon
													svg
														vertical-align middle
											.exerc
												col(5.5/11,gutter:0)
												box-sizing border-box
												text-align left
												margin-left .9em
											.volume
												col(3/11,gutter:0)
											.delete
												col(.5/11,gutter:0)
												margin-left .5em
												ng-md-icon
													svg
														vertical-align middle
														&:hover
															// background palette('Red','50')
															zoom 1.3
														cursor pointer

