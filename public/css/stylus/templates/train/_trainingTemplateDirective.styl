.ds-training
	box-sizing border-box
	display inline-block
	width 58px
	padding 7px 2px 6px 2px
	border 1px solid palette('Grey','400')
	text-align center
	p
		margin 0
		padding 0
	+tablet()
		zoom .8
	.ds-header
		box-sizing border-box
		line-height 10px
		vertical-align middle
		color palette('Grey','500')
		font-weight bold
		font-size 15px
		text-align center
	.ds-name-training
		box-sizing border-box
		line-height 39px
		vertical-align middle
		text-transform uppercase
		font-size 37px
