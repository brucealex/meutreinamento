.collection-wrap
	col(12/12,gutter:2)
	box-sizing border-box
	margin-top 1em
	padding-left 1em
	padding-right 1em
	+desktop()
		padding-left 1.5em
		padding-right 1.5em
		margin-top 2.5em
	+hd()
		padding-left 3em
		padding-right 3em
	ds-plan
		col(1/2,cycle:2,gutter:4)
		margin-bottom 2%
		.ds-plan-content
			padding-left 1.5em
			padding-right 1.5em
			md-content
				height:20vh
				+desktop()
					height:20vh
				min-height 13vh 
				// +tablet(orientation: portrait)
				// 	height:27vh
				// +desktop()
				// 	height:27vh
				text-align center
				ds-training
					span(1/6,.6/5,cycle:3,uncycle:1,gutter:0)
					+below(700px)
						span(1/3,cycle:3,uncycle:1,gutter:0)
					+hd()
						span(1/4,cycle:4,uncycle:1,gutter:0)
		.ds-plan-card
			.ds-plan-card-content
				.ds-plan-footer
					col(7/12,gutter:0)
				.ds-plan-actions
					col(5/12,gutter:0)
					padding 7px
					padding-right 15px
					button.md-button
						width 100%


