.train
	col(5/5,gutter:0)
	box-sizing border-box
	margin-top 1em
	position relative
	md-card
		position relative
		.md-subheader
			.md-subheader-inner
				 padding 2px 0px 2px 3px
		min-height:49vh !important
		.header-add
			col(3/5,gutter:0)
			box-sizing border-box
			padding-left 4em
			border-bottom 3px solid palette('Blue','500')
			height 2.7em
			// text-align center
			h2
				display inline
			span
				display inline-block
				font-size 180%
				padding-top .5em
				color black
				+desktop()
					padding-top .4em
		.options-add
			col(2/5,gutter:0)
			position relative
			box-sizing border-box
			border-bottom 3px solid palette('Blue','500')
			height 2.7em
			padding-top .4em
			+desktop()
				padding-top .6em
			padding-right 2.3em
			text-align right
			ng-md-icon
				padding-right 2.5em
			.close-train-menu
				position fixed
				top 0
				left 0
				width 100%
				height 100%
				z-index 5
			.train-menu
				col(4/5,gutter:0)
				box-sizing border-box
				position absolute
				top .1em
				left 2em
				z-index 6
				background-color white
				border 1px solid palette('Grey', '100')
				box-shadow 0 2px 4px 1px rgba(0,0,0,.1)
				ul
					margin 0
					padding 0
					margin-top .5em
					margin-bottom .5em
					font-size 110%
					text-align left
					list-style none
					li
						display block
						color palette('Blue', '500')
						line-height 220%
						cursor pointer
						position relative
						a
							padding-left .8em
							padding-right .8em
						&:hover
							background palette('Grey','100')
							// border-bottom 1px solid rgb(248,187,208)


		.content-add
			col(5/5,gutter:0)
			box-sizing border-box
			margin-top 2px
			padding-left 1em
			padding-right 1em
			+desktop()
				padding-left 1.7em
				padding-right 1.7em
			md-content
				height:64vh !important
				+tablet(orientation: portrait)
					height:48vh !important
				ul
					col(6/6,gutter:0)
					box-sizing border-box
					margin 0
					padding 0
					font-size 90%
					list-style none
					li
						col(12/12,gutter:0)
						border-bottom 1px solid palette('Grey','200')
						line-height 40px
						font-size 95%
						+desktop()
							line-height 55px
							font-size 100%
						box-sizing border-box
						vertical-align middle
						text-align center
						color palette('Grey','800')
						&:hover
							background palette('Grey','50')
						.exerc
							col(7/11,gutter:0)
							box-sizing border-box
							text-align left
							padding-left .4em
						.volume
							col(1.7/11,gutter:0)
						.weight
							col(1.7/11,gutter:0)

