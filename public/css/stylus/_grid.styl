.wrap
	col(16/16, gutter:0)
	.aside
		col(1/16,gutter:0)
		background-color palette('Grey', '400')
		position fixed
		height 100%
		overflow-y auto
	.aside-open
		col(3/16,gutter:0)
	.content-main
		col(15/16, gutter:0)
		shift(1/16,gutter:0)
		.header
			col(15/15,gutter:0) 
			shift(1/16,gutter:0)
			position fixed
			background-color palette('Grey', '200')
			height 5em
			.perfil
				col(6/15, gutter:0)
				height 5em
				background-color palette('Grey', '200')
				.menu
					col(4/11, gutter:0)
					height 25em
					position absolute
					top 6em
					left 0.5em
					background-color palette('Grey', '200')
			.user
				col(3/15, gutter:0)
				shift(12/15, gutter:0)
				position fixed
				background-color palette('Grey', '300')
		.content
			col(16/16,gutter:0) // col(15/16,gutter:1)
			background-color palette('Grey', '50')
			margin-top 6em
	.content-main-open
		col(13/16, gutter:0)
		shift(3/16,gutter:0)
