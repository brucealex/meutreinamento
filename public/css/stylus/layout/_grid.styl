// block css wrap
.wrap
	col(12/12,gutter:0)
	height 100%
// end css wrap

	// block css aside
	.aside
		col(1/12,gutter:0)
		+desktop()
			col(1/15,gutter:0)
		box-sizing border-box
		border-right 1px solid palette('Grey', '300')
		// box-shadow 5px 0 3px -5px rgba(0,0,0,.1)
		// box-shadow: 0 8px 10px rgba(0,0,0,.2)
		position fixed
		// background-color palette('Blue Grey', '500')
		background-color white
		// background url('../../../../images/backgroud.jpg') center center no-repeat fixed
		// background-size border-box
		height 100%
		overflow-y auto
		z-index 4
	.aside-open
		@extend .aside
		col(3/12,gutter:0)
	// end css aside

	// block css content
	.content-main
		col(11/12,gutter:0)
		shift(1/12,gutter:0)
		box-sizing border-box
		background-color palette('Grey', '50') 
		+desktop()
			col(14/15,gutter:0)
			shift(1/15,gutter:0)
		.header
			col(11/11,gutter:0) 
			shift(1/12,gutter:0)
			// background-color palette('Grey', '100') 
			background-color white
			// height 10em
			// background-color palette('Blue Grey', '400')
			// background -webkit-linear-gradient(90deg, #607D8B 27%, #78909C  73%)
			// background    -moz-linear-gradient(90deg, #607D8B 27%, #78909C  73%)
			// background     -ms-linear-gradient(90deg, #607D8B 27%, #78909C  73%)
			// background      -o-linear-gradient(90deg, #607D8B 27%, #78909C  73%)
			// background         linear-gradient(90deg, palette('Blue Grey', '50') 27%, palette('Grey', '100') 90%)
			+desktop()
				col(14/14,gutter:0)
				shift(1/15,gutter:0)
				position fixed
			position fixed
			border-bottom 1px solid palette('Grey', '300')
			// box-shadow 0 5px 3px -5px rgba(0,0,0,.1)
			// box-shadow 0 2px 5px -2px rgba(0,0,0,0.25)
			z-index 4
		.content
			col(11/11,gutter:0)
			box-sizing border-box
			+desktop()
				col(14/14,gutter:0)
				padding-left 8%
				padding-right 8%
			+hd()
				padding-left 12%
				padding-right 12%
			md-content.md-default-theme
				background-color transparent 
				box-sizing border-box
				// z-index 9
				md-card.grid
					box-sizing border-box
					min-height:86vh
					+tablet(orientation: portrait)
						min-height:90vh
					md-card-content
						+tablet()
							padding-top 7px
							padding-bottom 7px
					// box-shadow 0 1px 9px 0 rgba(0,0,0,.17)
					// box-shadow 0 1px 9px 0 rgba(0,0,0,.23)
			margin-top 5em
			+desktop()
				margin-top 5.5em
			// padding-left .5em
			// padding-right .5em
	.content-main-open
		@extend .content-main
		col(9/12,gutter:0)
		shift(3/12,gutter:0)
	// end css content