// block css wrap
.wrap
	col(12/12,gutter:0)
// end css wrap

	// block css aside
	.aside
		col(1/12,gutter:0)
		+desktop()
			col(1/15,gutter:0)
		box-sizing border-box
		// border-right 1px solid palette('Grey', '200')
		box-shadow 5px 0 5px -5px rgba(0,0,0,.1)
		// box-shadow: 0 8px 13px rgba(0,0,0,.3)
		position fixed
		background-color palette('Teal', '600')
		height 100%
		overflow-y auto
		z-index 4
	.aside-open
		@extend .aside
		col(3/12,gutter:0)
	// end css aside

	// block css content
	.content-main
		col(11/12,gutter:0)
		shift(1/12,gutter:0)
		background-color #f5f5f5
		+desktop()
			col(14/15,gutter:0)
			shift(1/15,gutter:0)
		.header
			col(11/11,gutter:0) 
			shift(1/12,gutter:0)
			background-color white
			+desktop()
				col(14/14,gutter:0)
				shift(1/15,gutter:0)
				position fixed
			position fixed
			// border-bottom 1px solid palette('Grey', '100')
			// background-color palette('Grey', '500')
			box-shadow 0 2px 8px 0 rgba(0,0,0,.26)
			// box-shadow 0 1px 1px -1px rgba(0,0,0,0.1)
			z-index 2
		.content
			col(11/11,gutter:0)
			+desktop()
				col(14/14,gutter:0)
				padding-left 8%
				padding-right 8%
			+hd()
				padding-left 12%
				padding-right 12%
			box-sizing border-box
			md-content.md-default-theme
				background-color #f5f5f5
				md-card
					min-height:89vh
					+desktop()
						min-height:87vh
					box-shadow 0 2px 9px 0 rgba(0,0,0,.26)
			margin-top 5.3em
			padding-left 1em
			padding-right 1em
	.content-main-open
		@extend .content-main
		col(9/12,gutter:0)
		shift(3/12,gutter:0)
	// end css content