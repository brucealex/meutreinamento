@import "../../bower_components/jeet/stylus/jeet/index"
@import "../../bower_components/normalize.styl/normalize"

edit(blue)
ipad=769px
.wrap
	input[type=checkbox]
		position absolute
		top -9999px
		left -9999px
	input[type=checkbox]
		display inline
		&:checked ~ .posts
			@media screen and (max-width: ipad)
				left (1/3*100)%
				position absolute
				col(2/3)
		&:checked ~ aside
			@media screen and (max-width: ipad)
				left 0px
// center(800px)

aside
	position absolute
	left (-1/3*100)%
	col(1/3)
	@media screen and (min-width: ipad)
		left 0
		nav
			label
				display none
	.alunos
		col(1/4,gutter:1)
		text-align center
	nav
		col(3/4)
		a
			color white
			text-align center
			text-decoration none
			padding 1em
			margin-bottom 2px 
			display: block


img
	max-width 100%
	display block	
	margin 5%
	border-radius 50%
	height auto

.posts
	label
		@media screen and (min-width: ipad)
			display none
		display inline-block
		cursor pointer
		user-select none
		padding 1%
	col(3/3)
	@media screen and (min-width: ipad)
		col(2/3)
		left (1/3*100)%
		position absolute

