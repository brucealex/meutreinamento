				section.new-training
					section.header-add
						md-select(placeholder='Treino', ng-model='plan' style="min-width:250px;")
							md-option(ng-repeat='plan in plans', value='{{plan}}') {{plan}}
					section.options-add
						// ng-md-icon(icon="launch" style="fill:white"  size="22" ng-click="true")
						// ng-md-icon(icon="expand_more" style="fill:white"  size="27" ng-click="true")
						md-button(class="md-raised"  ng-click="importTraining($event);") Importar Treino
					section.content-add(sv-root="", sv-part="exercicios")
						// .sortable-container.grid(sv-root="", sv-part="data.items4")
						// 	.well.grid(ng-repeat="item in [1,2,3,4,5,6,7,8] track by $index", sv-element="opts")
