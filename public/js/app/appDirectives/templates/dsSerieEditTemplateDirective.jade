							// 					span  {{item.name}} 
							// 				span.item-metadata
							// 					span.item-metastat
							// 						strong {{item.watchers}}
							// 						| watchers
							// 					span.item-metastat
							// 						strong {{item.forks}}
							md-tab(label="{{list.grupo}}" ng-repeat=" list in ::list_exercicios" )
								md-content.md-padding
									section
										span(ng-click="insert($index, list);" ng-class="{'item-select animated pulse': exerc.select }" ng-repeat="exerc in ::list.exercicios")
											| {{::exerc.nome}}
		section.ds-serie-edit-content
			section.ds-serie-edit-exercises(sv-root="serieEdit" sv-part="seriesEdit")  
				md-content.ds-serie-edit-scroll(scroll-glue="scroll.glued")
					section.ds-serie-edit-exercise(ng-repeat="person in [2,3,5,3,4,4,4] track by $index" sv-element="serieEdit")
						section.ds-serie-edit-drag-item(sv-handle="")
							ng-md-icon(icon="open_with" style="fill:black" size="22")
						section.ds-serie-edit-exercise-item
							span {{exercicio.nome}}
							span Supino Reto
						section.ds-serie-edit-rept-item
							span 10 Repts
						section.ds-serie-edit-weight-item
							span 10 kg
						section.ds-serie-edit-close-item
							ng-md-icon(icon="close" style="fill:grey"  size="24")
			section.ds-serie-edit-sliders
				section.ds-serie-edit-exer-select
					h4 Supino Reto
				section.ds-serie-edit-slider-content
					div(layout="row")
						div(flex="20", layout="", layout-align="center center")
							span.md-body-1 Repetição
						md-slider#blue-slider.md-primary(flex="", ng-model="repeticao", min="1", max="40", aria-label="blue")
						div(flex="10", layout="", layout-align="center center")
							input(type="number", ng-model="repeticao", aria-label="blue", aria-controls="blue-slider")
				section.ds-serie-edit-slider-title
					span Repetições
				section.ds-serie-edit-slider-content
					div(layout="row")
						div(flex="20", layout="", layout-align="center center")
							span.md-body-1 Peso&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						md-slider#blue-slider.md-primary(flex="",ng-disabled="true", ng-model="peso", min="0", max="280", aria-label="blue")
						div(flex="10", layout="", layout-align="center center")
							input(type="number", ng-model="peso", ng-disabled="true", aria-label="blue", aria-controls="blue-slider")
				section.ds-serie-edit-slider-title
					span Quilos
	section.ds-serie-edit-action-bottom
		md-button(class="md-raised md-primary" ng-click="exerciseEdit.edit=false") Salvar

